{
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "module": "esnext",
      "moduleResolution": "Node",
      "target": "es2015",
  
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "jsx": "react-jsx",
      "noEmit": true,
      "noFallthroughCasesInSwitch": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "baseUrl": "src",
      "rootDir": "src",
      "paths": {
        "@src/*": ["*"]
      }
    },
    "include": [
        "src"
    ]
  }